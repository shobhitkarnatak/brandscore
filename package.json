{
  "name": "brandscore",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "local": "concurrently \"npm run dev:css\" \"npm run dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:node": "cross-env NODE_ENV=development ENV=development nodemon --inspect ./server.js --watch ./server.js",
    "dev:remix": "remix watch",
    "prod": "remix build && run-p \"prod:*\"",
    "prod:node": "cross-env NODE_ENV=development ENV=production nodemon --inspect ./server.js --watch ./server.js",
    "prod:remix": "remix watch",
    "server:uat": "cross-env NODE_ENV=production ENV=development node ./server.js",
    "server:prod": "cross-env NODE_ENV=production ENV=production node ./server.js ",
    "start": "cross-env NODE_ENV=production ENV=development node ./server.js",
    "start:prod": "cross-env NODE_ENV=production ENV=production node ./server.js"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.5",
    "@heroicons/react": "^2.0.13",
    "@remix-run/express": "^1.11.1",
    "@remix-run/node": "^1.11.1",
    "@remix-run/react": "^1.11.1",
    "@remix-run/server-runtime": "^1.11.1",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tanstack/react-table": "^8.7.2",
    "axios": "^1.2.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "express": "^4.18.2",
    "isbot": "^3.6.5",
    "jwt-decode": "^3.1.2",
    "morgan": "^1.10.0",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-datepicker": "^4.8.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-icons": "^4.7.1",
    "react-toastify": "^9.1.1",
    "tailwind-scrollbar": "^2.0.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.11.1",
    "@remix-run/eslint-config": "^1.11.1",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
